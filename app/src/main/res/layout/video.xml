<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="videoScreenVM" type="com.heddymvp.app.modules.video.data.viewmodel.VideoVM"/>
    </data>
    <RelativeLayout
        android:layout_gravity="top|center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".modules.video.ui.VideoScreenActivity">

        <!-- adding VideoView to the layout -->
        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/imageArrowright"
            android:layout_width="@dimen/_62pxh"
            android:layout_height="@dimen/_62pxh"
            android:scaleType="fitXY"
            android:layout_alignEnd="@+id/videoView"
            android:layout_alignBottom="@+id/videoView"
            android:layout_marginBottom="@dimen/_30pxh"
            android:layout_marginEnd="@dimen/_10pxh"
            android:src="@drawable/img_arrowright_blue_a400_62x62"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_arrowright_blue_a400_62x62" />

    </RelativeLayout>
</layout>
